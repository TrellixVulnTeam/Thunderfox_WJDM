TOOLS=/home/runner/win-crosstool
export WINDOWSSDKDIR="${TOOLS}/windows-sdk"
EXTRA_PATH="${TOOLS}/clang/bin:${TOOLS}/vc/tools/msvc/14.33.31629/bin/hostx64/x64:"

export CC="${TOOLS}/clang/bin/clang-cl"
export CXX="${TOOLS}/clang/bin/clang-cl"
export DIA_SDK_PATH="${TOOLS}/dia-sdk"
export HOST_CC="${TOOLS}/clang/bin/clang"
export HOST_CXX="${TOOLS}/clang/bin/clang++"
export MIDL="${TOOLS}/wine/bin/widl"
export MOZ_INCLUDE_SOURCE_INFO=1
export MOZ_STUB_INSTALLER=1
export WIN32_REDIST_DIR="${TOOLS}/vc/redist/msvc/14.32.31326/x64/microsoft.vc143.crt/"
export WIN_UCRT_REDIST_DIR="${WINDOWSSDKDIR}/redist/10.0.19041.0/ucrt/dlls/x64"
export WINE="${TOOLS}/wine/bin/wine64"
export WINEDEBUG=-all

mk_add_options "export LD_PRELOAD=${TOOLS}/liblowercase/liblowercase.so"
mk_add_options "export LOWERCASE_DIRS=${TOOLS}"
mk_add_options "export PATH=$EXTRA_PATH$PATH"

ac_add_options --target=x86_64-pc-mingw32

ac_add_options --with-branding=browser/branding/beta
ac_add_options --disable-optimize
ac_add_options --disable-tests
ac_add_options --disable-debug
ac_add_options --with-mozilla-api-keyfile="$PWD/browser/apikeys/mozilla-desktop-geoloc-api.key"
ac_add_options --with-google-location-service-api-keyfile="$PWD/browser/apikeys/gls-gapi.data"
ac_add_options --with-google-safebrowsing-api-keyfile="$PWD/browser/apikeys/sb-gapi.data"
ac_add_options --enable-proxy-bypass-protection
ac_add_options --disable-verify-mar
ac_add_options --disable-crashreporter
ac_add_options --disable-maintenance-service
ac_add_options --enable-update-channel=beta
ac_add_options --with-l10n-base="$PWD/browser/locales/l10n"

ac_add_options --enable-bootstrap
